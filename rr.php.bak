function hasBudgetDeduction($rr_detail_id){
	$result = mysql_query("
		select * from budget_deduction where rr_detail_id = '$rr_detail_id'
	") or die(mysql_error());
	
	return (mysql_num_rows($result) > 0) ? 1 : 0;
}
